<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/dark_gray"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="教师详情"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text='@{@string/techaname+teacher.name}'
            android:textColor="@color/black"
            android:textSize="22dp" />


        <TextView
            android:id="@+id/teacher_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text='@{@string/phone+teacher.telephone}'
            android:textColor="@color/black"
            android:textSize="22dp" />


        <TextView
            android:id="@+id/teacher_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text='@{@string/email+teacher.email}'
            android:textColor="@color/black"
            android:textSize="22dp" />


        <TextView
            android:id="@+id/teacher_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text='@{@string/des+teacher.description}'
            android:textColor="@color/black"
            android:textSize="22dp" />


    </LinearLayout>

    <data>
        <variable
            name="teacher"
            type="com.example.myapplication.bean.TeacherBean" />
    </data>
</layout>